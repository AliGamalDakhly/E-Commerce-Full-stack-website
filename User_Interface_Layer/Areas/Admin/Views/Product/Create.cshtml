@model Product
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<!-- /.card-header -->
<!-- form start -->
<form method="post" enctype="multipart/form-data">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Product Name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" placeholder="Product Description" />
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Product Description" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label for="imgFile">Img</label>
            <input type="file" name="file" id="imgFile" class="form-control" placeholder="Product Image" />
            @* <span asp-validation-for="Img" class="text-danger small"></span> *@
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
            <span asp-validation-for="CategoryId" class="text-danger small"></span>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}