@model Product
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<!-- /.card-header -->
<div class="container">
    <div class="row d-flex justify-content-between">
        <!-- Form Column -->
        <div class="col-md-6">
            <!-- form start -->
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Product Name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Product Description" />
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" placeholder="Product Price" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label for="imgFile">Product Image</label>
                        <input type="file" name="file" id="imgFile" class="form-control" placeholder="Product Image" />
                        @* <span asp-validation-for="Img" class="text-danger small"></span> *@
                    </div>
                    <div class="form-group">
                        <input asp-for="Img" hidden/>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>

        <!-- Image Column -->
        <div class="col-md-4 d-flex justify-content-center align-items-center" style="min-height: 300px;">
            <img src="@Model.Img" alt="Product Image" class="img-fluid" style="max-height: 200px;" />
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}